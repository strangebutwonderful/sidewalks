<h1>All tweets</h1>

<dl>
  <% @tweets.each do |tweet| %>
    <dt><%= tweet.text %></dt>
    <dd>by <%= link_to tweet.user.name, tweet.user.provider_url, target: "_blank" %> at <%= time_ago_in_words(tweet.created_at) %> ago</dd>
    
    <dd><%= tweet.coordinates_longitude %></dd>
    <dd><%= tweet.coordinates_latitude %></dd>
    <dd>
      <%= link_to 'Show', tweet %>
      <%= link_to 'Edit', edit_tweet_path(tweet) %>
      <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
    </dd>
  <% end %>
</dl>

<%= link_to 'New Tweet', new_tweet_path %>

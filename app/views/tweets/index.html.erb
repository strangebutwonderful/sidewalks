<h1>All tweets</h1>

<dl>
  <% @tweets.each do |tweet| %>
    <dt><%= link_to tweet.text, tweet.provider_url, target: "_blank" %></dt>
    <dd>by <%= link_to tweet.user_name, tweet.user_provider_url, target: "_blank" %> at <%= time_ago_in_words(tweet.created_at) %> ago</dd>
    
    <dd>
      <%= link_to 'Show', tweet %>
      <%= link_to 'Edit', edit_tweet_path(tweet) %>
      <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
    </dd>
  <% end %>
</dl>

<%= link_to 'New Tweet', new_tweet_path %>

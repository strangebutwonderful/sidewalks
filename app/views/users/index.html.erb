<h3>Users</h3>
<div class="">
<dl>
  <% @users.each do |user| %>
    <dt><%= link_to user.name, user %> (@<%= user.provider_screen_name %>)</dt>
    <dd><b>Provider Id:</b> <%= user.provider_id %></dd>
    <dd><b>Added:</b> <%= user.created_at %></dd>
    <dd>
      <b>Roles:</b> <%= user.roles.first.name.titleize unless user.roles.first.nil? %>
      <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
      <%= render user %>
      <%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></dd>
  <% end %>
</dl>
</div>

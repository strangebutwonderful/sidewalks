<% if noise.has_coordinates? %>
  <%# TODO: set location for map %>
  <div id="map-noise-<%= noise.id %>"
    data-map 
    data-map-bounds="<%= JSON(noise.map.boundaries) %>"
    data-map-center="<%= JSON(noise.map.center) %>"
    data-map-zoom="16"
    >

    <% noise.origins.each do |origin| %>
      <div data-map-marker
        data-map-marker-latitude="<%= origin.latitude %>" 
        data-map-marker-longitude="<%= origin.longitude %>"
        data-map-marker-clickable=false
      >
      </div>
    <% end %>

    <div data-map-panel id="map-panel-noise-<%= noise.id %>">
    </div>

  </div>
<% end %>
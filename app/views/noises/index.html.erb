<h1>All noises</h1>

<dl>
  <% @noises.each do |noise| %>
    <dt><%= link_to noise.text, noise.provider_url, target: "_blank" %></dt>
    <dd>
      by <%= link_to noise.user_name, noise.user_provider_url, target: "_blank" %> 
      at <%= link_to time_ago_in_words(noise.created_at) + ' ago', noise %>
    </dd>
    
    <dd>
      <% if user_signed_in? && current_user.has_role?(:admin) %>
        <%= link_to 'Edit', edit_noise_path(noise) %>
        <%= link_to 'Destroy', noise, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </dd>
  <% end %>
</dl>
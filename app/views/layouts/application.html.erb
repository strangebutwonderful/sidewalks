<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Sidewalks" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Sidewalks" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= application_meta_tags %>
    <% if Rails.env.development? %>
      <%= favicon_link_tag '/favicon-development.ico' %>
      <%= favicon_link_tag '/favicon-development.png', rel: 'apple-touch-icon', type: 'image/png' %>
    <% else %>
      <%= favicon_link_tag '/favicon.ico' %>
      <%= favicon_link_tag '/favicon.png', rel: 'apple-touch-icon', type: 'image/png' %>    
    <% end %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <%= render 'google/analytics' %>
    <div class="navbar navbar-static-top">
      <nav class="navbar-inner">
        <div class="container-fluid">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </div>
    <div class="content">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
    <footer class="footer">
      <%= render 'layouts/secondary_navigation' %>
    </footer>
  </body>
</html>
